{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XL File Manager",
  "version": "0.1.0",
  "identifier": "com.tauri-app.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "security": {
      "capabilities": ["main-capability"],
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' blob:",
      "assetProtocol": {
        "enable": true,

        "scope": ["$DOCUMENT/SkaterXL/Maps/*", "$DOCUMENT/SkaterXL/Maps/**"]
      }
    },
    "windows": [
      {
        "title": "XL File Manager",
        "width": 900,
        "height": 640,
        "label": "main",
        "decorations": false
      }
    ]
  },

  "plugins": {
    "os": {},
    "shell": {},
    "fs": {}
  }
}
