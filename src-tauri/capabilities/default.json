{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Full CRUD access scoped recursively to Documents/SkaterXL",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    "fs:allow-read",
    "fs:allow-read-dir",
    "fs:allow-write",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-stat",
    "fs:allow-copy-file",
    "fs:allow-document-write",
    "fs:allow-document-write-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOCUMENT/SkaterXL/" },
        { "path": "$DOCUMENT/SkaterXL/**" }
      ]
    },
    "core:path:default",
    "core:path:allow-resolve-directory",
    "core:event:default",
    "core:event:allow-listen",
    "shell:default",
    "shell:allow-open"
  ]
}
